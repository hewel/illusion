// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Library {
  id          Int         @id @default(autoincrement())
  name        String
  description String?
  libraryPath String
  type        String
  mediaItems  MediaItem[]
}

model MediaItem {
  id          Int        @id @default(autoincrement())
  title       String
  description String?
  year        Int?
  duration    Int?
  rating      Float?
  genres      Genre[]
  tags        Tag[]
  poster      String?
  backdrop    String?
  library     Library    @relation(fields: [libraryId], references: [id])
  libraryId   Int
  mediaType   String
  filePath    String
  subtitles   Subtitle[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Tag {
  id         Int         @id @default(autoincrement())
  name       String      @unique
  mediaItems MediaItem[]
}

model Genre {
  id         Int         @id @default(autoincrement())
  name       String      @unique
  mediaItems MediaItem[]
}

model Subtitle {
  id          Int       @id @default(autoincrement())
  language    String
  filePath    String
  mediaItem   MediaItem @relation(fields: [mediaItemId], references: [id])
  mediaItemId Int
}
