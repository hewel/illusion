// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           Int        @id @default(autoincrement())
  name         String
  account      String     @unique
  passwordHash String
  wishlists    Wishlist[]
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

model MediaType {
  id         Int         @id @default(autoincrement())
  name       String      @unique
  mediaItems MediaItem[]
}

model MediaItem {
  id          Int        @id @default(autoincrement())
  title       String
  description String?
  year        Int?
  duration    Int?
  rating      Float?
  genres      Genre[]
  tags        Tag[]
  poster      String?
  backdrop    String?
  libraryId   Int
  mediaType   MediaType  @relation(fields: [mediaTypeId], references: [id])
  mediaTypeId Int
  wishlist    Wishlist[]
  imdb        String
  subtitles   Subtitle[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Tag {
  id         Int         @id @default(autoincrement())
  name       String      @unique
  mediaItems MediaItem[]
}

model Genre {
  id         Int         @id @default(autoincrement())
  name       String      @unique
  mediaItems MediaItem[]
}

model Subtitle {
  id           Int       @id @default(autoincrement())
  language     String
  downloadPath String
  mediaItem    MediaItem @relation(fields: [mediaItemId], references: [id])
  mediaItemId  Int
}

model Wishlist {
  id        Int         @id @default(autoincrement())
  name      String
  user      User        @relation(fields: [userId], references: [id])
  userId    Int
  media     MediaItem[]
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}
