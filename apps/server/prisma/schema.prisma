// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           Int        @id @default(autoincrement())
  name         String
  account      String     @unique
  passwordHash String
  wishlists    Wishlist[]
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

model MediaType {
  id         Int         @id @default(autoincrement())
  name       String      @unique
  mediaItems MediaItem[]
}

model MediaItem {
  id          Int          @id @default(autoincrement())
  title       String
  description String?
  year        Int?
  duration    Int?
  rating      Float?
  genres      Genre[]
  tags        Tag[]
  poster      String?
  backdrop    String?
  libraryId   Int
  mediaType   MediaType    @relation(fields: [mediaTypeId], references: [id])
  mediaTypeId Int
  wishlist    Wishlist[]
  neoDBMark   NeoDBMark?
  imdbId      String
  tmdbDetails TmdbDetails?
  subtitles   Subtitle[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Tag {
  id        Int         @id @default(autoincrement())
  name      String      @unique
  mediaList MediaItem[]
  neoDBMark NeoDBMark[]
}

model Genre {
  id        Int         @id @default(autoincrement())
  name      String      @unique
  mediaList MediaItem[]
}

model Subtitle {
  id           Int       @id @default(autoincrement())
  language     String
  downloadPath String
  media        MediaItem @relation(fields: [mediaId], references: [id])
  mediaId      Int
}

model Wishlist {
  id        Int         @id @default(autoincrement())
  name      String
  user      User        @relation(fields: [userId], references: [id])
  userId    Int
  media     MediaItem[]
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

model NeoDBMark {
  id          Int       @id @default(autoincrement())
  shelfType   String    @map("shelf_type")
  visibility  Int
  commentText String?   @map("comment_text")
  ratingGrade String?   @map("rating_grade")
  createdTime DateTime  @map("created_time")
  tags        Tag[]
  media       MediaItem @relation(fields: [mediaItemId], references: [id])
  mediaItemId Int       @unique
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model TmdbDetails {
  id            Int       @id
  title         String
  originalTitle String    @map("original_title")
  homepage      String
  overview      String
  poster        String    @map("poster_path")
  backdrop      String    @map("backdrop_path")
  imdbId        String
  releaseDate   DateTime  @map("release_date")
  media         MediaItem @relation(fields: [mediaId], references: [id])
  mediaId       Int       @unique
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}
